@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingDetail[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDetail[0].Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDetail[0].Booking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDetail[0].Slot)
            </th>
            <th></th>
        </tr>
