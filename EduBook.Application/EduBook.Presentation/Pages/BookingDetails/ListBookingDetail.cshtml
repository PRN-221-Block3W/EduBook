        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Booking.BookingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot.SlotName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BookingDetailId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BookingDetailId">Details</a> |
