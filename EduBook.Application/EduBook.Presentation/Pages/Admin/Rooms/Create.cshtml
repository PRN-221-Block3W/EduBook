@page
@model EduBook.Presentation.Pages.Admin.Rooms.CreateModel

@{
	ViewData["Title"] = "Create";
	Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}
<style>
	.recent_order {
		margin: 20px auto;
		padding: 20px;
		background-color: #f8f9fa;
		border-radius: 10px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
	}

		.recent_order h1 {
			font-size: 24px;
			margin-bottom: 20px;
			color: #333;
		}

		.recent_order form {
			max-width: 400px;
			margin: 0 auto;
		}

		.recent_order .form-group {
			margin-bottom: 20px;
		}

		.recent_order label {
			font-weight: bold;
		}

		.recent_order input[type="text"],
		.recent_order input[type="time"] {
			width: 100%;
			padding: 10px;
			border: 1px solid #ccc;
			border-radius: 5px;
		}

		.recent_order input[type="submit"] {
			padding: 10px 20px;
			background-color: #007bff;
			color: #fff;
			border: none;
			border-radius: 5px;
			cursor: pointer;
		}

			.recent_order input[type="submit"]:hover {
				background-color: #0056b3;
			}

		.recent_order .text-danger {
			color: #dc3545;
			font-size: 14px;
		}

		.recent_order a {
			color: #007bff;
			text-decoration: none;
		}

			.recent_order a:hover {
				text-decoration: underline;
			}
</style>
<div class="recent_order">
	<h1>Create</h1>

	<h4>Room</h4>
	<hr />

	<div class="row">
		<div class="col-md-6">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="mb-3">
					<label asp-for="Room.RoomName" class="form-label">Room Name</label>
					<input asp-for="Room.RoomName" class="form-control" />
					<span asp-validation-for="Room.RoomName" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Room.Description" class="form-label">Description</label>
					<input asp-for="Room.Description" class="form-control" />
					<span asp-validation-for="Room.Description" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Room.LengthRoom" class="form-label">Length</label>
					<input asp-for="Room.LengthRoom" class="form-control" />
					<span asp-validation-for="Room.LengthRoom" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Room.WidthRoom" class="form-label">Width</label>
					<input asp-for="Room.WidthRoom" class="form-control" />
					<span asp-validation-for="Room.WidthRoom" class="text-danger"></span>
				</div>
				<div class="form-check mb-3">
					<input class="form-check-input" asp-for="Room.Status" />
					<label class="form-check-label" for="Room_Status">@Html.DisplayNameFor(model => model.Room.Status)</label>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Create</button>
				</div>
			</form>
		</div>
	</div>

	<div>
		<a asp-page="Index">Back to List</a>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
