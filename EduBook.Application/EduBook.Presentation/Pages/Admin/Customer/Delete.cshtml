@page
@model EduBook.Presentation.Pages.Admin.Customer.DeleteModel

@{
	Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}
<style>
	.recent_order {
		margin: 20px auto;
		padding: 20px;
		background-color: #f8f9fa;
		border-radius: 10px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
	}

		.recent_order h1 {
			font-size: 24px;
			margin-bottom: 20px;
			color: #333;
		}

		.recent_order h4 {
			font-size: 18px;
			margin-bottom: 10px;
			color: #333;
		}

		.recent_order hr {
			border-top: 1px solid #ccc;
			margin-bottom: 20px;
		}

		.recent_order dl.row {
			display: flex;
			flex-wrap: wrap;
		}

		.recent_order dt.col-sm-2 {
			flex: 0 0 20%;
			max-width: 20%;
			font-weight: bold;
		}

		.recent_order dd.col-sm-10 {
			flex: 0 0 80%;
			max-width: 80%;
			margin-bottom: 10px;
		}

		.recent_order a {
			color: #007bff;
			text-decoration: none;
			margin-right: 10px;
		}

			.recent_order a:hover {
				text-decoration: underline;
			}
</style>

<div class="recent_order">
	<h1>Delete</h1>

	<h3>Are you sure you want to delete this?</h3>
	<div>
		<h4>Account</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Account.UserName)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Account.UserName)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Account.Phone)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Account.Phone)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Account.Address)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Account.Address)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Account.Dob)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Account.Dob)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Account.Email)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Account.Email)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Account.Password)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Account.Password)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Account.Status)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Account.Status)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Account.Role)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Account.Role.RoleName)
			</dd>
		</dl>

		<form method="post">
			<input type="hidden" asp-for="Account.AccountId" />
			<input type="submit" value="Delete" style="color: red" />
			<a asp-page="./Index">Back to List</a>
		</form>
	</div>
</div>

