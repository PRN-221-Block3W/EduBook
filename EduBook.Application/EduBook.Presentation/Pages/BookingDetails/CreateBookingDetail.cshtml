@page
@model EduBook.Presentation.Pages.BookingDetails.CreateBookingDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BookingDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookingDetail.BookingDetailId" class="control-label"></label>
                <input asp-for="BookingDetail.BookingDetailId" class="form-control" />
                <span asp-validation-for="BookingDetail.BookingDetailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDetail.BookingId" class="control-label"></label>
                <select asp-for="BookingDetail.BookingId" class ="form-control" asp-items="ViewBag.BookingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookingDetail.SlotId" class="control-label"></label>
                <select asp-for="BookingDetail.SlotId" class ="form-control" asp-items="ViewBag.SlotId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookingDetail.AccountId" class="control-label"></label>
                <select asp-for="BookingDetail.AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BookingDetail.Status" /> @Html.DisplayNameFor(model => model.BookingDetail.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

