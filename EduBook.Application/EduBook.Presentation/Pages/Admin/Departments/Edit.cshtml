@page
@model EduBook.Presentation.Pages.Admin.Departments.EditModel

@{
	Layout = "/Pages/Shared/_LayoutAdmin.cshtml";

}
<style>
    .recent_order {
        margin: 20px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .recent_order h1 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }

        .recent_order form {
            max-width: 400px;
            margin: 0 auto;
        }

        .recent_order .form-group {
            margin-bottom: 20px;
        }

        .recent_order label {
            font-weight: bold;
        }

        .recent_order input[type="text"],
        .recent_order input[type="time"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .recent_order input[type="submit"] {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .recent_order input[type="submit"]:hover {
                background-color: #0056b3;
            }

        .recent_order .text-danger {
            color: #dc3545;
            font-size: 14px;
        }

        .recent_order a {
            color: #007bff;
            text-decoration: none;
        }

            .recent_order a:hover {
                text-decoration: underline;
            }
</style>
<div class="recent_order">
	<h1>Edit</h1>

	<h4>Department</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Department.DepartmentId" />
				<div class="form-group">
					<label asp-for="Department.DepartmentName" class="control-label"></label>
					<input asp-for="Department.DepartmentName" class="form-control" />
					<span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Department.Address" class="control-label"></label>
					<input asp-for="Department.Address" class="form-control" />
					<span asp-validation-for="Department.Address" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Department.StartTime" class="control-label"></label>
					<input asp-for="Department.StartTime" class="form-control" />
					<span asp-validation-for="Department.StartTime" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Department.EndTime" class="control-label"></label>
					<input asp-for="Department.EndTime" class="form-control" />
					<span asp-validation-for="Department.EndTime" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>

	<div>
		<a asp-page="./Index">Back to List</a>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
