@page
@model EduBook.Presentation.Pages.Admin.Departments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department.DepartmentId" class="control-label"></label>
                <input asp-for="Department.DepartmentId" class="form-control" />
                <span asp-validation-for="Department.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.DepartmentName" class="control-label"></label>
                <input asp-for="Department.DepartmentName" class="form-control" />
                <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.Address" class="control-label"></label>
                <input asp-for="Department.Address" class="form-control" />
                <span asp-validation-for="Department.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.StartTime" class="control-label"></label>
                <input asp-for="Department.StartTime" class="form-control" />
                <span asp-validation-for="Department.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.EndTime" class="control-label"></label>
                <input asp-for="Department.EndTime" class="form-control" />
                <span asp-validation-for="Department.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.ImageDepartment" class="control-label"></label>
                <input asp-for="Department.ImageDepartment" class="form-control" />
                <span asp-validation-for="Department.ImageDepartment" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Department.Status" /> @Html.DisplayNameFor(model => model.Department.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
