@page
@model EduBook.Presentation.Pages.Rooms.EditRoomModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.RoomId" />
            <div class="form-group">
                <label asp-for="Room.DepartmentId" class="control-label"></label>
                <select asp-for="Room.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="Room.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomName" class="control-label"></label>
                <input asp-for="Room.RoomName" class="form-control" />
                <span asp-validation-for="Room.RoomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Description" class="control-label"></label>
                <input asp-for="Room.Description" class="form-control" />
                <span asp-validation-for="Room.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.LengthRoom" class="control-label"></label>
                <input asp-for="Room.LengthRoom" class="form-control" />
                <span asp-validation-for="Room.LengthRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.WidthRoom" class="control-label"></label>
                <input asp-for="Room.WidthRoom" class="form-control" />
                <span asp-validation-for="Room.WidthRoom" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Room.Status" /> @Html.DisplayNameFor(model => model.Room.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
